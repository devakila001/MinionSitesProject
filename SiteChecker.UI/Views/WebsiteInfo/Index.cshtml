                @Html.DisplayNameFor(model => model.LastCheckedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonitoringIntervalSeconds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
